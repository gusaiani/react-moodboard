@import "fonts"

.product
  background white
  display flex
  clear both
  float left
  margin 60px 0
  position relative
  width 966px
  > div
    margin-top 60px
    padding 20px
    position relative
    &:first-of-type
      border-right 1px solid #ccc
      flex 3
      width 75%
      div.price-and-buy
        right 20px
        bottom 20px
      img
        display block
        margin 0 auto
        max-height: 400px
        max-width 100%
      p
        &.description
          font-size 13px
          margin 20px 0 40px
        &.name
          sans-bold()
          margin 0
          max-width 90%
        &.brand
          margin 0
          max-width 90%
    &:last-of-type
      flex 1
      h5
        font-size 12px
        font-weight normal
        margin 0 0 40px
      a
        color black
        display block
        float none
        margin 0 0 30px
        text-decoration none
        &:hover
          p
            text-decoration underline
        img
          display block
          margin 0 auto
          width 70px
        p
          color black
          font-size 10px
          text-align center
