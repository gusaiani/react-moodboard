@import "fonts"

.product
  background white
  display flex
  clear both
  float left
  margin 60px 0
  position relative
  width 966px
  > div
    margin-top 60px
    position relative
    &:first-of-type
      border-right 1px solid #ccc
      flex 0 0 72%
      div.price-and-buy
        right 20px
        bottom 20px
      img
        display block
        margin 0 auto
        max-height: 400px
        max-width 100%
      p
        &.description
          font-size 13px
          margin 20px 0 40px
        &.name
          sans-bold()
          margin 0
          max-width 90%
        &.brand
          margin 0
          max-width 90%
    &:last-of-type
      flex 0 0 28%
      h5
        font-size 12px
        font-weight normal
        margin 0 0 40px
        text-align center
        width 100%
      div
        display flex
        flex-wrap wrap
        a
          color black
          display block
          flex-grow 1
          float left
          margin 0 0 30px
          text-decoration none
          width 50%
          &:hover
            p
              text-decoration underline
          img
            display block
            height 50px
            margin 0 auto
            width auto
          p
            color black
            font-size 10pt
            text-align center
