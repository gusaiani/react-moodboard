tile-dimension = 136px
border-width = 1px
tile = tile-dimension - border-width
gutter = 10px
double-tile-dimension = (tile * 2) + gutter + (border-width * 2)

.moodboard
  clear both
  float left
  margin 60px 0
  width 740px
  > div
    float left
    height tile
    margin 0 gutter gutter 0
    width tile
    > div
      margin 0
  .item
    background white
    border 1px solid #333
    height tile
    position relative
    width tile
    img
      position absolute
      max-height 100%
      width auto
      transform translateX(-50%)
      left 50%
      max-width 100%
    div
      &.name-and-brand
        left 6px
        position absolute
        bottom 6px
      &.price-and-buy
        right 4px
        position absolute
        bottom 4px
        span
          display block
          clear both
          margin 0 2px 6px 0
          text-align right
        button.buy
          float right
          font-size 10px
          padding 4px 8px
  .container
    background transparent
    &.one-by-two
      width tile-dimension
  .one-by-one
    button
      &.see-more
        height: 18px
        width: 18px
        line-height: 1px
        padding: 0
        font-size: 13px
      &.zoom
        background-size 16px
        height 22px
        left 2px
        top 2px
        width 22px
    div
      &.name-and-brand
        bottom 3px
        font-size 11px
        left 3px
        width 53%
      &.price-and-buy
        span
          font-size 11px
          margin-bottom 4px
        button.buy
          font-size 9px
  .two-by-two
    height double-tile-dimension
    width double-tile-dimension
  .one-by-two
    height double-tile-dimension
    width tile
    > .item
      margin-bottom gutter
